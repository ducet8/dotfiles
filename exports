#    export BLUE="$(tput setaf 33 2> /dev/null)"  # Alternate choice: 4
#    export CYAN="$(tput setaf 37 2> /dev/null)"  # Alternate choice: 6
#    export GREEN="$(tput setaf 64 2> /dev/null)"  # Alternate choice: 2
#    export ORANGE="$(tput setaf 166 2> /dev/null)"
#    export PURPLE="$(tput setaf 125 2> /dev/null)"
#    export RED="$(tput setaf 124 2> /dev/null)"  # Alternate choice: 1
#    export VIOLET="$(tput setaf 61 2> /dev/null)"
#    export WHITE="$(tput setaf 15 2> /dev/null)"  # Alternate choice: 7
#    export YELLOW="$(tput setaf 136 2> /dev/null)"  # Alternate choice: 3
